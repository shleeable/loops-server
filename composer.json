{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "joinloops/loops-server",
    "type": "project",
    "description": "The federated short video sharing platform.",
    "keywords": [
        "loops",
        "joinLoops",
        "loopsVideo",
        "tiktok",
        "video",
        "activitypub",
        "fediverse",
        "reels"
    ],
    "license": "AGPL-3.0-only",
    "homepage": "https://joinloops.org",
    "support": {
        "issues": "https://github.com/joinloops/loops-server/issues",
        "source": "https://github.com/joinloops/loops-server"
    },
    "authors": [
        {
            "name": "Daniel Supernault",
            "email": "hello@pixelfed.org"
        }
    ],
    "require": {
        "php": "^8.3|^8.4|^8.5",
        "aws/aws-sdk-php": "3.369.30",
        "bacon/bacon-qr-code": "^3.0",
        "intervention/image-laravel": "^1.5",
        "laravel/framework": "^12.0",
        "laravel/horizon": "^5.33",
        "laravel/passport": "^13.0",
        "laravel/sanctum": "^4.1",
        "laravel/tinker": "^2.9",
        "laravel/ui": "^4.6",
        "league/flysystem-aws-s3-v3": "^3.0",
        "pbmedia/laravel-ffmpeg": "^8.7",
        "pragmarx/google2fa-laravel": "^2.2",
        "predis/predis": "^3.2",
        "resend/resend-laravel": "^1.0.0",
        "spatie/laravel-backup": "^9.3",
        "stevebauman/purify": "^6.3",
        "symfony/http-client": "^7.3",
        "symfony/http-foundation": "7.3.7",
        "symfony/mailgun-mailer": "^7.3"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^3.6",
        "fakerphp/faker": "^1.23",
        "larastan/larastan": "^3.0",
        "laravel/pail": "^1.1",
        "laravel/pint": "^1.22",
        "laravel/sail": "^1.26",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.1",
        "pestphp/pest": "^3.0",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^11.0.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-install-cmd": [
            "@php artisan app:composer-post-install-command"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "@php artisan app:composer-post-install-command"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite"
        ],
        "pint": [
            "./vendor/bin/pint"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
